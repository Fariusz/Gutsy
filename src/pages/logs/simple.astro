---
import Layout from "../../layouts/Layout.astro";
import SimpleLogForm from "../../components/SimpleLogForm.tsx";

// Check if user is authenticated
const {
  data: { user },
  error,
} = await Astro.locals.supabase.auth.getUser();

if (error || !user) {
  // Redirect to login page if not authenticated
  return Astro.redirect("/login");
}
---

<Layout title="Simple Log - Gutsy" hideFloatingButton={true}>
  <main class="min-h-screen bg-gray-50 py-8">
    <div class="max-w-4xl mx-auto px-4">
      <div class="mb-8">
        <h1 class="text-3xl font-bold text-gray-900 mb-2">Simple Meal Log</h1>
        <p class="text-gray-600">Quick and easy way to log your meals and symptoms.</p>
      </div>

      <div class="bg-white rounded-lg shadow-sm border border-gray-200">
        <div class="p-6">
          <SimpleLogForm client:idle />
        </div>
      </div>
    </div>
  </main>
</Layout>
