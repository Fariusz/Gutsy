---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Trigger Analysis">
  <main>
    <div id="triggers-root">
      <!-- Static content as fallback -->
      <div class="max-w-4xl mx-auto p-6">
        <h1 class="text-3xl font-bold text-gray-900 mb-8">Ingredient Trigger Analysis</h1>

        <!-- Date Range Selection -->
        <div class="bg-white rounded-lg shadow-md p-6 mb-8">
          <h2 class="text-xl font-semibold mb-4">Analysis Period</h2>
          <div class="flex flex-col md:flex-row gap-4 items-end">
            <div class="flex-1">
              <label for="start-date" class="block text-sm font-medium text-gray-700 mb-2">Start Date</label>
              <input
                id="start-date"
                type="date"
                class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
              />
            </div>
            <div class="flex-1">
              <label for="end-date" class="block text-sm font-medium text-gray-700 mb-2">End Date</label>
              <input
                id="end-date"
                type="date"
                class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
              />
            </div>
            <div class="flex flex-col justify-end">
              <label class="flex items-center mb-2">
                <input type="checkbox" id="detailed" class="mr-2" />
                <span class="text-sm text-gray-700">Detailed Analysis</span>
              </label>
            </div>
            <button
              id="analyze-btn"
              class="bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-6 rounded-lg transition-colors duration-200"
            >
              Analyze Triggers
            </button>
            <button
              id="create-test-data-btn"
              class="bg-green-600 hover:bg-green-700 text-white font-semibold py-2 px-4 rounded-lg transition-colors duration-200 text-sm"
            >
              Create Test Data
            </button>
          </div>
        </div>

        <!-- Results Area -->
        <div id="results-area" class="bg-white rounded-lg shadow-md p-6">
          <div class="text-center py-8">
            <p class="text-gray-500">
              Select a date range and click "Analyze Triggers" to see your ingredient trigger analysis.
            </p>
          </div>
        </div>
      </div>
    </div>
  </main>
</Layout>

<script>
  /* eslint-disable */
  // Set default date range (last 30 days)
  const today = new Date();
  const thirtyDaysAgo = new Date(today);
  thirtyDaysAgo.setDate(today.getDate() - 30);

  const startDateInput = document.getElementById("start-date") as HTMLInputElement;
  const endDateInput = document.getElementById("end-date") as HTMLInputElement;
  const resultsArea = document.getElementById("results-area");

  if (startDateInput && endDateInput) {
    startDateInput.value = thirtyDaysAgo.toISOString().split("T")[0];
    endDateInput.value = today.toISOString().split("T")[0];
  }

  // Analysis button
  const analyzeBtn = document.getElementById("analyze-btn") as HTMLButtonElement;
  if (analyzeBtn) {
    analyzeBtn.addEventListener("click", async () => {
      analyzeBtn.textContent = "Analyzing...";
      analyzeBtn.disabled = true;

      try {
        const startDate = startDateInput.value;
        const endDate = endDateInput.value;
        const isDetailed = (document.getElementById("detailed") as HTMLInputElement).checked;

        if (!startDate || !endDate) {
          throw new Error("Please select both start and end dates");
        }

        // Build query parameters
        const params = new URLSearchParams({
          start_date: startDate,
          end_date: endDate,
          limit: "10",
        });

        if (isDetailed) {
          params.append("detailed", "true");
        }

        const response = await fetch(`/api/triggers?${params}`);
        const data = await response.json();

        if (!response.ok) {
          throw new Error(data.error || "Failed to fetch triggers");
        }

        // Display results
        let html = `
          <div class="mb-6">
            <h2 class="text-xl font-semibold mb-2">Analysis Results</h2>
            <p class="text-gray-600">
              Based on ${data.analysis_period.total_logs} logs from 
              ${new Date(data.analysis_period.start_date).toLocaleDateString()} to 
              ${new Date(data.analysis_period.end_date).toLocaleDateString()}
            </p>
          </div>
        `;

        if (data.triggers.length === 0) {
          html += `
            <div class="text-center py-8">
              <p class="text-gray-500 mb-4">No trigger analysis available for the selected period.</p>
              <p class="text-sm text-gray-400">Try selecting a longer date range or log more meals with symptoms.</p>
            </div>
          `;
        } else {
          html += `
            <div class="overflow-x-auto">
              <table class="w-full border-collapse">
                <thead>
                  <tr class="border-b border-gray-200">
                    <th class="text-left py-3 px-4 font-semibold">Ingredient</th>
                    <th class="text-left py-3 px-4 font-semibold">Consumption Count</th>
                    <th class="text-left py-3 px-4 font-semibold">Trigger Score</th>
                    <th class="text-left py-3 px-4 font-semibold">Confidence</th>
                  </tr>
                </thead>
                <tbody>
          `;

          data.triggers.forEach((trigger, index) => {
            const rowClass = index % 2 === 0 ? "bg-gray-50" : "bg-white";
            const scoreColor =
              trigger.trigger_score > 1.5
                ? "text-red-600"
                : trigger.trigger_score > 0.5
                  ? "text-orange-500"
                  : "text-green-600";

            html += `
              <tr class="${rowClass}">
                <td class="py-3 px-4 font-medium">${trigger.ingredient_name}</td>
                <td class="py-3 px-4">${trigger.consumption_count}</td>
                <td class="py-3 px-4 font-semibold ${scoreColor}">
                  ${trigger.trigger_score > 0 ? "+" : ""}${trigger.trigger_score.toFixed(2)}
                </td>
                <td class="py-3 px-4">${(trigger.confidence_interval * 100).toFixed(0)}%</td>
              </tr>
            `;
          });

          html += `
                </tbody>
              </table>
            </div>
            <div class="mt-6 p-4 bg-blue-50 rounded-lg">
              <h3 class="font-medium text-blue-900 mb-2">How to read these results:</h3>
              <ul class="text-sm text-blue-800 space-y-1">
                <li><strong>Trigger Score:</strong> Higher positive scores suggest the ingredient may worsen symptoms</li>
                <li><strong>Confidence:</strong> Higher confidence means more reliable results</li>
                <li><strong>Consumption Count:</strong> How many times you've logged this ingredient</li>
              </ul>
            </div>
          `;
        }

        if (resultsArea) {
          resultsArea.innerHTML = html;
        }
      } catch (error) {
        if (resultsArea) {
          resultsArea.innerHTML = `
            <div class="bg-red-50 border border-red-200 rounded-lg p-4">
              <p class="text-red-600">Error: ${error.message}</p>
            </div>
          `;
        }
      } finally {
        analyzeBtn.textContent = "Analyze Triggers";
        analyzeBtn.disabled = false;
      }
    });
  }

  // Test data creation button
  const createTestDataBtn = document.getElementById("create-test-data-btn") as HTMLButtonElement;
  if (createTestDataBtn) {
    createTestDataBtn.addEventListener("click", async () => {
      createTestDataBtn.textContent = "Creating...";
      createTestDataBtn.disabled = true;

      try {
        const response = await fetch("/api/create-test-data", {
          method: "POST",
          headers: { "Content-Type": "application/json" },
        });

        const data = await response.json();

        if (response.ok) {
          if (resultsArea) {
            resultsArea.innerHTML = `
              <div class="bg-green-50 border border-green-200 rounded-lg p-6">
                <h3 class="text-lg font-semibold text-green-900 mb-3">âœ… Test Data Created Successfully!</h3>
                <div class="text-sm text-green-800 space-y-2">
                  <p><strong>Total logs:</strong> ${data.summary.total_logs}</p>
                  <p><strong>Next steps:</strong></p>
                  <ul class="list-disc ml-6 space-y-1">
                    <li>Set date range: 2026-01-01 to 2026-01-12</li>
                    <li>Click "Analyze Triggers" to see results</li>
                    <li>Expected: Tomatoes should show as a trigger</li>
                  </ul>
                </div>
              </div>
            `;
          }

          // Update date inputs to optimal range
          startDateInput.value = "2026-01-01";
          endDateInput.value = "2026-01-12";
        } else {
          if (resultsArea) {
            resultsArea.innerHTML = `
              <div class="bg-red-50 border border-red-200 rounded-lg p-4">
                <p class="text-red-600">Error: ${data.error}</p>
              </div>
            `;
          }
        }
      } catch (error) {
        if (resultsArea) {
          resultsArea.innerHTML = `
            <div class="bg-red-50 border border-red-200 rounded-lg p-4">
              <p class="text-red-600">Error: ${error.message}</p>
            </div>
          `;
        }
      } finally {
        createTestDataBtn.textContent = "Create Test Data";
        createTestDataBtn.disabled = false;
      }
    });
  }
</script>
