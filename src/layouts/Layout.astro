---
import "../styles/global.css";
import FloatingActionButton from "../components/FloatingActionButton.astro";

interface Props {
  title?: string;
  hideFloatingButton?: boolean;
}

const { title = "10x Astro Starter", hideFloatingButton = false } = Astro.props;

// Check if user is authenticated
let user = null;
try {
  const {
    data: { session },
    error,
  } = await Astro.locals.supabase.auth.getSession();
  if (!error && session?.user) {
    user = session.user;
  }
} catch (error) {
  console.error("Error checking session:", error);
}
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <div id="portal-root"></div>
    <header class="bg-white border-b border-gray-200">
      <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center py-4">
          <div class="flex items-center space-x-8">
            <a href="/" class="text-xl font-bold text-gray-900">Gutsy</a>
            {
              user && (
                <div class="flex space-x-4">
                  <a
                    href="/logs/new"
                    class="bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded-lg transition-colors duration-200 text-sm"
                  >
                    + New Log
                  </a>
                  <div class="hidden md:flex space-x-6 items-center">
                    <a href="/logs" class="text-gray-600 hover:text-gray-900 font-medium">
                      My Logs
                    </a>
                  </div>
                </div>
              )
            }
          </div>
          <div class="flex items-center space-x-4">
            {
              user ? (
                <div class="flex items-center space-x-4">
                  <span class="text-sm text-gray-600 hidden sm:inline">{user.email}</span>
                  <button id="logout-btn" class="text-gray-600 hover:text-gray-900 font-medium text-sm">
                    Sign Out
                  </button>
                </div>
              ) : (
                <div class="flex items-center space-x-4">
                  <a href="/login" class="text-gray-600 hover:text-gray-900 font-medium text-sm">
                    Sign In
                  </a>
                  <a
                    href="/register"
                    class="bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded-lg transition-colors duration-200 text-sm"
                  >
                    Sign Up
                  </a>
                </div>
              )
            }
          </div>
        </div>
      </nav>
    </header>
    <slot />

    <!-- Floating Action Button for creating new logs -->
    {!hideFloatingButton && user && <FloatingActionButton href="/logs/new" text="New Meal Log" icon="ðŸ½ï¸" />}

    <script>
      // Handle logout functionality
      document.addEventListener("DOMContentLoaded", () => {
        const logoutBtn = document.getElementById("logout-btn");
        if (logoutBtn) {
          logoutBtn.addEventListener("click", async () => {
            try {
              const response = await fetch("/api/auth/logout", {
                method: "POST",
                headers: {
                  "Content-Type": "application/json",
                },
              });

              if (response.ok) {
                // Redirect to home page after successful logout
                window.location.href = "/";
              } else {
                console.error("Logout failed");
              }
            } catch (error) {
              console.error("Error during logout:", error);
            }
          });
        }
      });
    </script>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
